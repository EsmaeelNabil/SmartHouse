<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.esmaeel.projectapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:weightSum="1"
        android:background="#000000">

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="#f1f0ee"
            android:layout_marginBottom="3dp"
            android:layout_height="70dp"

            >

            <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                >

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                   >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/thermometer"
                        android:id="@+id/imageView"
                         />

                    <TextView
                        android:text="---"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/temptexview"

                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/hh"
                        android:id="@+id/imageView2"
                         />

                    <TextView
                        android:text="---"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/humiditytx"


                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"

                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/stopwatch"
                        android:id="@+id/imageView3"

                         />

                    <TextView
                        android:text="--:--:--"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/timetx"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/allcomtrols">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/allllllllllll">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:layout_marginBottom="3dp"
                        android:id="@+id/Laptop"
                        android:background="#403083c9"
                        android:layout_weight="1">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:foregroundGravity="center">

                            <ImageView
                                app:srcCompat="@drawable/house"
                                android:layout_marginBottom="6dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />

                            <TextView
                                android:text="HOUSE CONTROL"
                                android:textAlignment="center"
                                android:textColor="#ffffff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:typeface="sans"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="match_parent"
                        android:background="#f1f0ee"
                        android:padding="10dp"
                        android:layout_marginBottom="3dp"
                        android:layout_width="match_parent"
                        android:id="@+id/room1">

                        <TextView
                            android:text="Room 1 light    "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:typeface="sans"
                            android:textStyle="bold"
                            />

                        <ImageView
                            android:layout_width="25dp"
                            app:srcCompat="@drawable/liof"
                            android:id="@+id/lamp1"
                            android:layout_weight="1"
                            android:layout_height="25dp" />

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rm1switch" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="15dp"
                        android:background="#f1f0ee"
                        android:padding="10dp"
                        android:layout_marginBottom="3dp"
                        android:id="@+id/room2">

                        <TextView
                            android:text="Room 2 light    "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView8"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:typeface="sans"
                            android:textStyle="bold"
                            />

                        <ImageView
                            android:layout_width="25dp"
                            app:srcCompat="@drawable/liof"
                            android:id="@+id/lamp2"
                            android:layout_weight="1"
                            android:layout_height="25dp" />

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rm2switch"
                             />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:background="#f1f0ee"
                        android:padding="10dp"
                        android:layout_marginBottom="3dp"
                        android:id="@+id/room3">

                        <TextView
                            android:text="Room 3 light    "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView9"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:typeface="sans"
                            android:textStyle="bold"
                            />

                        <ImageView
                            android:layout_width="25dp"
                            app:srcCompat="@drawable/liof"
                            android:id="@+id/lamp3"
                            android:layout_weight="1"
                            android:layout_height="25dp" />

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rm3switch"
                          />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="15dp"
                        android:background="#f1f0ee"
                        android:padding="10dp"
                        android:layout_marginBottom="3dp"
                        android:id="@+id/bathroom">

                        <TextView
                            android:text="Bathroom light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:typeface="sans"
                            android:textStyle="bold"
                            />

                        <ImageView
                            android:layout_width="25dp"
                            app:srcCompat="@drawable/liof"
                            android:id="@+id/lamp4"
                            android:layout_weight="1"
                            android:layout_height="25dp" />

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/bathswitch"
                           />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="15dp"
                        android:background="#f1f0ee"
                        android:padding="10dp"
                        android:layout_marginBottom="3dp"
                        android:id="@+id/kitchen">

                        <TextView
                            android:text="Kitchen light    "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:typeface="sans"
                            android:textStyle="bold"
                            />

                        <ImageView
                            android:layout_width="25dp"
                            app:srcCompat="@drawable/liof"
                            android:id="@+id/lamp5"
                            android:layout_weight="1"
                            android:layout_height="25dp" />

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ktswitch"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="15dp"
                        android:background="#f1f0ee"
                        android:padding="10dp"
                        android:layout_marginBottom="3dp"
                        android:id="@+id/tv">

                        <TextView
                            android:text="TV                      "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView12"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:typeface="sans"
                            android:textStyle="bold"
                            />

                        <ImageView
                            app:srcCompat="@drawable/tvoff"
                            android:id="@+id/lamp6"
                            android:layout_weight="1"
                            android:layout_width="25dp"
                            android:layout_height="25dp" />

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvswitch"
                             />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LaptopView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/Laptop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="1"
                            android:background="#403083c9"
                            android:orientation="vertical"
                            android:padding="10dp"
                            tools:ignore="DuplicateIds">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:foregroundGravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/computerlaptopcontroimg"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    app:srcCompat="@drawable/laptop" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="COMPUTER / LAPTOP CONTROL"
                                    android:textAlignment="center"
                                    android:textColor="#ffffff"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:typeface="sans" />


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/music"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="3dp"
                            android:background="#f1f0ee"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:paddingTop="15dp">

                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Music                "
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:typeface="sans" />

                            <ImageView
                                android:id="@+id/lamp7"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/musicstart" />

                            <Switch
                                android:id="@+id/musicswitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="OFF" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="3dp"
                            android:background="#f1f0ee"
                            android:orientation="vertical"
                            android:padding="10dp"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView7"
                                    android:layout_width="50dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/littlev" />

                                <SeekBar
                                    android:id="@+id/seekBar"
                                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:max="10"
                                    android:progress="3" />

                                <ImageView
                                    android:id="@+id/imageView5"
                                    android:layout_width="50dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/topv" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:foregroundGravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/applysoundtx"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sound control"
                                    android:textAlignment="center"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:typeface="sans" />


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="3dp"
                            android:background="#f1f0ee"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:paddingTop="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/muteimgv"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/mute" />

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:text="MUTE"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/unmuteimgv"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/unmutee" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:text="UNMUTE"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/nextimgv"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/nextsong" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:text="NEXT"
                                    android:textStyle="normal" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/musiccontrol"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="1"
                            android:background="#f1f0ee"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:paddingTop="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/standimgv"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/standby" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:text="STANDBY"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/powerimgv"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/poweroff" />

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:text="POWER OFF"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/cdimgv"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/cdroom" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:text="OPEN CD"
                                    android:textStyle="normal" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/infobtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:text="History"
                        android:textColor="#f9f9f9" />

                    <Button
                        android:id="@+id/button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:text="Change Connection Configuration"
                        android:textColor="#f9f9f9" />
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_weight="1" />

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
